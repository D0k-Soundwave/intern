# MCP Router Environment Configuration Example
# 
# Copy this file to .env and configure for your environment
# Per requirements.md: Complete implementation, no placeholders.

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=mcp_routing
DB_USER=mcp_user
DB_PASSWORD=mcp_secure_password_2024
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_COMMAND_TIMEOUT=60
DB_SSL_MODE=prefer
DB_CONNECT_TIMEOUT=10

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_HEALTH_CHECK_INTERVAL=30
OLLAMA_CONNECTION_TIMEOUT=10
OLLAMA_REQUEST_TIMEOUT=300
OLLAMA_MAX_RETRIES=3
OLLAMA_KEEP_ALIVE_DURATION=3600

# System Configuration
LOG_LEVEL=INFO
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=300
THREAD_POOL_SIZE=4
ASYNC_POOL_SIZE=10

# Monitoring Configuration
METRICS_ENABLED=true
PROMETHEUS_PORT=8090
HEALTH_CHECK_PORT=8091
METRICS_BUFFER_SIZE=10000
METRICS_RETENTION_HOURS=24

# Alert Thresholds
ALERT_RESPONSE_TIME_MS=5000
ALERT_ERROR_RATE_PERCENT=10
ALERT_MEMORY_USAGE_PERCENT=85
ALERT_DISK_USAGE_PERCENT=90

# Security Configuration
RATE_LIMIT_RPM=60
RATE_LIMIT_BURST=20
MAX_INPUT_LENGTH=10000

# Caching Configuration
CACHE_ENABLED=true
REDIS_URL=redis://redis:6379/0

# Production vs Development
MCP_ENV=production
# Set to 'development' for development mode

# Optional: External Services
# EXTERNAL_API_URL=https://api.example.com
# EXTERNAL_API_KEY=your-api-key-here

# Optional: SSL Configuration (for production)
# SSL_CERT_PATH=/etc/ssl/certs/cert.pem
# SSL_KEY_PATH=/etc/ssl/private/key.pem

# Optional: Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30

# Optional: Email Notifications
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=notifications@example.com
# SMTP_PASSWORD=email-password
# ADMIN_EMAIL=admin@example.com

# Optional: Webhook Notifications
# WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Docker Compose Overrides
COMPOSE_PROJECT_NAME=mcp-router
COMPOSE_HTTP_TIMEOUT=120

# Resource Limits (for Docker)
POSTGRES_MEMORY_LIMIT=512m
OLLAMA_MEMORY_LIMIT=8g
ROUTER_MEMORY_LIMIT=1g
PROMETHEUS_MEMORY_LIMIT=256m
GRAFANA_MEMORY_LIMIT=256m
REDIS_MEMORY_LIMIT=256m